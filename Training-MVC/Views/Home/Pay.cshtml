@using Microsoft.Extensions.Options
@inject IOptions<MVC.Data.StripeSettings> Stripe

@{
    Layout = "_Layout";
}

@{
var total = ViewBag.total;}
<div class="text-center">
    <form asp-action="Stripe_payment" asp-controller="Home" method="POST">
        <article>
            <label>Amount Rp. @total</label>
        </article>
        <script src="//checkout.stripe.com/v2/checkout.js"
        class="stripe-button"
        data-key="@Stripe.Value.PublishableKey"
        data-locale="auto"
        data-description="Sample Charge">
        </script>
    </form>
</div>

