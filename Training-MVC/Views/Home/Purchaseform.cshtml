    <div class="container">
  <div class="text-center"><br><br>
    <h1>Checkout Form</h1>
    <p class="lead">Please Complete The Form Below</p><br><br>
  </div>

  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span class="badge badge-secondary badge-pill">bellroy</span>
      </h4>
      <ul class="list-group mb-3">
        @{
           var itemOut = ViewBag.items;
           foreach(var i in itemOut)
           {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <small class="text-muted">@i.title</small>
                </div>
                <div>
                <span class="text-muted">Rp. @i.price </span><br>
                <small class="text-muted">Quantity : @i.total </small>
                </div>
                </li>
           }
        }
        <li class="list-group-item d-flex justify-content-between">
        @{
          var sum = ViewBag.total;
          <span>Total (Rp)</span>
          <strong id="sum">@sum</strong>
        }
        </li>
      </ul>
    </div>
    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">Billing address</h4>
      <form class="needs-validation" novalidate>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
            <input type="text" class="form-control" id="firstName" placeholder="" required>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <input type="text" class="form-control" id="lastName" placeholder="" required>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="email">Email <span class="text-muted">(Optional)</span></label>
          <input type="email" class="form-control" id="email" placeholder="you@example.com">
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>

        <div class="mb-3">
          <label for="phone">Phone Number<span class="text-muted"></span></label>
          <input type="phone" class="form-control" id="phone" placeholder="08xxxxxxxxxx">
          <div class="invalid-feedback">
            Please enter your phone numbers.
          </div>
        </div>

        <div class="mb-3">
          <label for="address">Address</label>
          <input type="text" class="form-control" id="address" placeholder="Shipping Adress" required>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        <div class="row">
          <div class="col-md-5 mb-3">
            <label for="country">Country</label>
            <select class="custom-select d-block w-100" id="country" required>
              <option value="">Choose...</option>
              <option>Indonesia</option>

            </select>
            <div class="invalid-feedback">
              Please select a valid country.
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <label for="state">Regency</label>
            <select class="custom-select d-block w-100" id="state" required>
              <option value="">Choose...</option>
              <option>Kulon Progo</option>
              <option>Gunung Kidul</option>
              <option>Bantul</option>
              <option>Sleman</option>
              <option>Kota Yogyakarta</option>
            </select>
            <div class="invalid-feedback">
              Please provide a valid state.
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <label for="zip">Zip</label>
            <input type="text" class="form-control" id="zip" placeholder="" required>
            <div class="invalid-feedback">
              Zip code required.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="button" onclick="javascript: checkout(this)">Continue to payment</button>
      </form>
    </div>
  </div>
