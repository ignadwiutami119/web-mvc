@{
    ViewData["Title"] = "Product Detail";
}

<h2>@ViewData["Title"]</h2>
<p>Here is our product details</p>
<div class="text-center">
    @{
        var get = ViewBag.items;
        foreach (var item in get)
        {
            <div>
                <h6>@item.title</h6>
                <div>
                    <img src=@item.image width="500px">
                </div>
                @item.desc
                <h6>Price : Rp.@item.price</h6>
                <a href="/Home/Cart/@item.id">Add to chart</a>
                <br>
            </div>
        }
    }
</div>