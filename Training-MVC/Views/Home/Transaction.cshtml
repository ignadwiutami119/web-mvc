@{
    Layout = "_LayoutAdmin";
}

<h2 class="text-center">Transaction Success</h2>
<h4 class="text-center" style="color:#858585">History</h4>

<div class="margin">
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Customer</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Total Purchase</th>
      <th scope="col">Payment Method</th>
      <th scope="col">Zip Code</th>
      <th scope="col">Address</th>
    </tr>
  </thead>
  <tbody>
      @{  var count = 0; 
          var items = ViewBag.items;
          foreach(var trx in items) {
            count++;
    <tr>
      <th>@count</th>
      <td>@trx.nama</td>
      <td>@trx.email</td>
      <td>@trx.phone_number</td>
      <td>@trx.totalPurchase</td>
      <td>@trx.payment_method</td>
      <td>@trx.Zipcode</td>
      <td>@trx.address</td>
    </tr> }
      }
</table> </div> 